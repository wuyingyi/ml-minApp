/* pages/detail/detail.wxss */

page {
  width: 100%;
  height: 100%;
}

.banner {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  background: #a19a8a;
}

.banner image {
  width: 50%;
  height: 100%;
}

.banner .title, .banner .desc, .banner .type {
  position: absolute;
  left: 400rpx;
  top: 94rpx;
  font-size: 32rpx;
  color: white;
  font-weight: normal;
}

.banner .type {
  top: 56rpx;
  font-size: 26rpx;
  color: #c0bab2;
}

.banner .desc {
  top: 140rpx;
  font-size: 22rpx;
  color: #c0bab2;
}

.banner .sale {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  padding: 8rpx 18rpx;
  border: 1px solid white;
  border-radius: 10rpx;
  color: white;
  font-size: 20rpx;
}

/* 价格和人数 */

.price-num {
  align-items: center;
  justify-content: space-between;
  padding: 28rpx;
  height: 92rpx;
  background: #ede6d3;
  border-bottom: 1px solid #d7d7d7;
  color: #6f6f6f;
  font-size: 24rpx;
}

.price-wrapper {
  color: #92908e;
}

.price {
  color: #a7a17a;
  font-size: 34rpx;
}

/* 时间地点 */

.time-place {
  padding-left: 28rpx;
}

.time-place view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
}

.time-place .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.place {
  padding-right: 30rpx;
}

.icon_arow {
  width: 20rpx;
  height: 35rpx;
}

.time-place .text {
  font-size: 24rpx;
  color: #666;
}

.time {
  border-bottom: 1px dotted #d6d6d6;
}

/* 列表 */

.list {
  padding: 24rpx 28rpx;
  border-top: 1px solid #d6d6d6;
}

.title {
  color: #343434;
  font-size: 26rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
}

.desc {
  color: #9e9e9e;
  font-size: 26rpx;
}

.button {
  width: 93%;
  margin: 50rpx auto;
  background: #c88e44;
  color: #fff;
}
