/* pages/mine/mine.wxss */

.top, .list-wrapper {
  width: 100%;
}

.top {
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 335rpx;
  background: #f0f0f0;
}

.nameWrapper {
  align-items: center;
  margin-left: 50rpx;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 22rpx;
  border: 10rpx solid #fff;
  border-radius: 50%;
}

.name {
  font-size: 38rpx;
}

.identBtn {
  padding: 0;
  height: 42rpx;
  line-height: 42rpx;
  border-radius: 0;
  background: none;
}

.identBtn::after {
  border: none;
}

.ident {
  width: 120rpx;
  height: 42rpx;
  margin-left: 50rpx;
}

.list-wrapper {
  padding-left: 30rpx;
}

.list {
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  padding: 0 32rpx;
  border-bottom: 1px dotted #c6c6c6;
}

.button_contact {
  background: white;
  border-radius: 0rpx;
  border-bottom: 1px dotted #c6c6c6;
}

.button_contact::after {
  border: none;
}

.list .icon {
  width: 32rpx;
  height: 42rpx;
  margin-right: 20rpx;
  margin-bottom: -10rpx;
}

.list .text {
  font-size: 30rpx;
}

.list .arowR {
  float: right;
  width: 20rpx;
  height: 34rpx;
}
